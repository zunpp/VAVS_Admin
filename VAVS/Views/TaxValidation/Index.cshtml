@using Microsoft.Extensions.Configuration
@using X.PagedList
@inject IConfiguration Configuration
@model IPagedList<VAVS_Model.Model.VM_TaxValidation>
@{
    var controller = "TaxValidation";
    ViewData["Title"] = "All " + controller;
    var count = 1;
    var query = Context.Request.Query;
    var VehicleNumber = query["VehicleNumber"];
    var NRC = query["NRC"];
    var Status = query["Status"];
    var StateDivision = query["StateDivision"];
    var Township = query["Township"];
    ViewData["Query"] = query;

}

<div class="panel-group" id="accordion" role="tablist" aria -multiselectable="true">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne1">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <i class='fa fa-search'></i> Search
                </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne1">
            <div class="panel-body">
                <form method="get" action="@Configuration.GetSection("AppUrls").GetSection("TestUrl").Value/@controller/Index">

                    <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label" for="FromDate">Vehicle Number</label>
                                <div class="controls">
                                    <input type="text" class="form-control" name="VehicleNumber" id="vehicleNumber" value="@VehicleNumber">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label" for="FromDate">NRC</label>
                                <div class="controls">
                                    <input type="text" class="form-control" name="NRC" id="nrc" value="@NRC">
                                    <input type="text" name="Status" id="nrc" value="@Status" hidden>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">&nbsp;</label>
                                <div class="controls">
                                    <button type="submit" class="btn btn-primary gradient-blue">ရှာဖွေရန်</button>
                                    <a asp-controller="@controller" asp-action="Index" class="btn btn-primary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="panel panel-default">
        <header class="panel-heading">
            @*<h2 class="title pull-left"></h2>*@

        </header>
        <div class="panel-body">
            @*  <div class="row">
            <div class="pull-right">
            <a asp-controller="@controller" asp-action="Create" class="btn btn-xs btn-secondary" style="width: 90px; height: 28px; padding: 3px;margin-right:5px;">အသစ်ထည့်ရန်</a>
            </div>
            </div> *@
            <div class="row">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr style="background-color: #0f3cbd;">
                                <th style="color:white;">စဉ်</th>
                                <th style="color:white;">တိုင်းဒေသကြီး</th>
                                <th style="color:white;">မြို့နယ်</th>
                                <th style="color:white;">Vehicle Number</th>
                                <th style="color:white;">Vehicle Brand</th>
                                <th style="color:white;">TINNumber</th>
                                <th style="color:white;">NRC</th>
                                <th style="color:white;">Name</th>
                                <th style="color:white;">QRCode</th>
                                <th style="color:white;">Demand No.</th>
                                <th style="color:white;">Form No.</th>
                                <th style="color:white;"></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@((((int)ViewBag.Page - 1) * (int)ViewBag.PageSize) + count)</td>
                                    <td class="text-center">@item.StateDivision</td>
                                    <td class="text-center">@item.Township</td>
                                    <td class="text-center">@item.VehicleNumber</td>
                                    <td class="text-center">@item.VehicleBrand</td>
                                    <td class="text-center">@item.PersonTinnumber</td>
                                    <td class="text-center">@item.PersonNrc</td>
                                    <td class="text-center">@item.Name</td>
                                    <td class="text-center">@item.QrcodeNumber</td>
                                    <td class="text-center">@item.DemandNumber</td>
                                    <td class="text-center">@item.FormNumber</td>

                                    @if ((item.QrcodeNumber == null || item.QrcodeNumber == "") && (item.DemandNumber == null || item.DemandNumber == ""))
                                    {
                                        <td class="text-center">
                                            <a asp-controller="@controller" asp-action="Edit" asp-route-Id="@item.TaxValidationPkid" class="btn btn-xs btn-secondary">Modify</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center" style="color:green">Approve</td>
                                    }

                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                    <partial name="_Pagination" model="Model" view-data="ViewData" />
                </div>
            </div>
        </div>
    </div>
</section>
