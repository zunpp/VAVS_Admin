                    @*}*@
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-md-4 form-group">
                                <label class="form-label" for="field-1">Manufacturer</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-1" asp-for="Manufacturer">
                                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="form-label" for="field-1">Build Type</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-1" asp-for="BuildType">
                                    <span asp-validation-for="BuildType" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="form-label" for="field-1">Fuel Type</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-1" asp-for="FuelType">
